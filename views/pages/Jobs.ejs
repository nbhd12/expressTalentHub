<%- include("../partials/head", { title: "Accueil Talent Hub" }) %>

<h3 class="book-grid-title">Missions disponibles</h3>
<br>

<div class="job-grid">
  <% jobs.forEach((job) => { %>
    <div class="job-card">
      <h4><%= job.title %></h4><br>
      <p class="description-text"><%= job.description %></p>

      <div class="skills"><br>
        <% job.skills.forEach((skill) => { %>
          <div class="skill-tag"><%= skill %></div>
        <% }) %>
      </div>
      <br>

      <a class="link" href="/jobs/<%= job.id %>">Voir plus</a>
    </div>
  <% }) %>
</div>


<%- include("../partials/footer") %>
